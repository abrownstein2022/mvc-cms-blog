<div class="row">
  <div class="col-md-6">
    <h2>Signup</h2>

    <form class="form login-form" method="POST" action="/api/users/register">
      <div class="form-group">
        <label for="username-login">username:</label>
        {{!-- any input or textarea / select / checkbox / etc with a 'name' property will be passed to form actions as { 'name': 'value' } --}}
        <input class="form-input" type="text" id="username-login" name="username" />
      </div>
      <div class="form-group">
        <label for="password-login">password:</label>
        <input class="form-input" type="password" id="password-login" name="password" minlength="8" />
      </div>
      {{!-- Could add confirm password --}}
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Submit</button>
      </div>
      <a href="/login">Login!</a>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>
