<div class="text-center">
  {{!-- <h2>{{user_id}}: {{username}}</h2> We are not passing username into render calls --}}
  <div class="col-md-5">
    <a href="/new">+ New Post</a>
  {{#each blogs as |blog|}}
  <div class="card">
    <div class="card-header display-flex justify-space-between">
      <h4>{{blog.title}}</h4>
      <small>{{blog.username}} on {{format_date blog.date_created}}</small>
    </div>
    <div class="card-body">{{blog.content}}</div>
    <a class="text-normal" href="/active/{{blog.id}}">+ Comment</a>
    {{#if blog.active}}
    <form method="POST" action="/api/blogs/comment/{{blog.id}}">
      <input name="content" />
      <button type="submit">Submit</button>
    </form>
    {{/if}}
    <ul>
      {{#each blog.comments as |comment|}}
      <li>{{comment.content}} - <small>{{comment.username}} on {{format_date comment.date_created}}</small></li>
      {{/each}}
    </ul>
    {{!-- Edit this Post</a> --}}
    {{!-- <div class="card-footer">posted by: {{blog.username}} on {{format_date blog.date_created}}</div> --}}
  </div>

  {{/each}}
  </div>
</div>
